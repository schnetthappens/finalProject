 <div class="user-show-header-container">
    <img class="user-avatar" src="{{model.data.user.avatar_url}}" alt="John Schnettgoecke" />
    <h2 class="primary-heading missing-entries">You have 3 missing entries, {{model.data.user.first_name}}.</h2>
    <h3 class="primary-subheading users-show-subheading">We found three days of missing time this week.<br>Please pay $3, and be better next week.</h3>
    {{users-show-pay model=model action='checkout'}}
  </div>

<div class="users-show-heading-wrapper">
  <h2 class="users-show-heading">this week's entries</h2>
</div>

<div class="user-show-entries-container">
  {{users-show-monday model=model}}
  {{users-show-tuesday model=model}}
  {{users-show-wednesday model=model}}
  {{users-show-thursday model=model}}
  {{users-show-friday model=model}}
</div>


{{yield}}
